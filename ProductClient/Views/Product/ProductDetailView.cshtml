@using ProductClient.ViewModels
@model ProductViewModel
@{
    ViewData["Title"] = "Edit Product";
}
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
    }

    body {
        background-color: #f5f5f5;
        padding: 20px;
    }

    .save-button {
        background: #28a745;
        color: white;
        padding: 10px 18px;
        border-radius: 8px;
        font-size: 16px;
        border: 1px solid #28a745;
        cursor: pointer;
        font-weight: bold;
        margin-left: auto;
        transition: background 0.3s;
    }

        .save-button i {
            font-size: 18px;
        }

        .save-button:hover {
            background: #fff;
            border: 1px solid #28a745;
            color: #28a745;
        }

    .container {
        display: flex;
        gap: 20px;
    }

    .left-section {
        flex: 1;
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
    }

    .product-image a img {
        width: 1000px;
        height: auto;
        border-radius: 5px;
    }

    .image-actions {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 10px;
    }

    .custom-file-upload {
        background: #5758BB;
        color: white;
        padding: 10px 18px;
        border-radius: 8px;
        font-size: 16px;
        font-weight: bold;
        border: 1px solid #5758BB;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: background 0.3s;
    }

        .custom-file-upload i {
            font-size: 18px;
        }

        .custom-file-upload:hover {
            background: #fff;
            border: 1px solid #5758BB;
            color: #5758BB;
        }

    input[type="file"] {
        display: none;
    }

    .right-section {
        flex: 2;
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

            .form-group input[readonly] {
                cursor: default;
                background-color: #f8f9fa;
            }

    .delete-button {
        background: #dc3545;
        color: white;
        padding: 10px 18px;
        border-radius: 8px;
        font-size: 16px;
        border: 1px solid #dc3545;
        cursor: pointer;
        font-weight: bold;
        transition: background 0.3s;
    }

        .delete-button i {
            font-size: 18px;
        }

        .delete-button:hover {
            background: #fff;
            border: 1px solid #dc3545;
            color: #dc3545;
        }

    .button-group {
        display: flex;
        margin-left: auto;
        align-items: center;
        gap: 8px;
    }

    /* Modal style */
    #confirmModal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.4);
        z-index: 9999;
        justify-content: center;
        align-items: center;
    }

    .modal-content {
        background: white;
        padding: 20px;
        border-radius: 10px;
        width: 300px;
        text-align: center;
        box-shadow: 0 0 10px rgba(0,0,0,0.3);
    }

        .modal-content h3 {
            margin-bottom: 10px;
        }

    .modal-actions button {
        padding: 10px 20px;
        border-radius: 5px;
        border: none;
        margin: 10px 5px 0;
        font-weight: bold;
        cursor: pointer;
    }

    .modal-actions .yes-btn {
        background: #dc3545;
        color: white;
    }

    .modal-actions .no-btn {
        background: #ccc;
    }

    .modal-actions .yes-btn:hover {
        background: white;
        color: #dc3545;
        border: 1px solid #dc3545;
    }

    .modal-actions .no-btn:hover {
        background: #999;
        color: white;
    }
</style>

<form method="post" action="/product/Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="ProductDetail.Id" />
    <div class="container">
        <div class="left-section">
            <h2>Product Image</h2>

            <div class="product-image">
                @if (!string.IsNullOrEmpty(Model.ProductDetail?.ImageUrl))
                {
                    <a href="@Url.Action("ProductDetailView", "Product", new { id = Model.ProductDetail.Id })">
                        <img id="previewImage" src="@Model.ProductDetail.ImageUrl" alt="@Model.ProductDetail.ProductName" class="img-fluid" />
                    </a>
                }
                else
                {
                    <p>No image available</p>
                }
            </div>

            <div class="image-actions">
                <label for="imageUpload" class="custom-file-upload">
                    <i class="fa-solid fa-image"></i> Replace Image
                </label>
                <input type="file" id="imageUpload" name="ImageFile" accept="image/*" onchange="previewImageEvent(event)" />
            </div>
        </div>
        <div class="right-section">
            <h2>General Information</h2>
            <div class="form-group">
                <label>Product Name</label>
                <input asp-for="ProductDetail.ProductName" required />
            </div>
            <div class="form-group">
                <label>Price</label>
                <input asp-for="ProductDetail.Price" type="number" min="1" required />
            </div>
            <div class="form-group">
                <label>Quantity</label>
                <input asp-for="ProductDetail.Quantity" type="number" min="1" required />
            </div>
            <div class="form-group">
                <label>Unit</label>
                <input asp-for="ProductDetail.Unit" />
            </div>
            <div class="form-group">
                <label>Product Description</label>
                <textarea asp-for="ProductDetail.Description" rows="5" required></textarea>
            </div>
            <h2>Product Management</h2>
            <div class="form-group">
                <label>Rating</label>
                <input asp-for="ProductDetail.Rating" readonly />
            </div>
            <div class="form-group">
                <label>Sold</label>
                <input asp-for="ProductDetail.Sold" readonly />
            </div>
            <div class="button-group">
                <button type="submit" class="save-button">
                    <i class="fa-solid fa-floppy-disk"></i> Save
                </button>
                <button type="button" class="delete-button" onclick="confirmDelete(@Model.ProductDetail.Id)">
                    <i class="fa-solid fa-trash"></i> Delete
                </button>
            </div>
        </div>
    </div>
</form>

<!-- Modal HTML -->
<div id="confirmModal">
    <div class="modal-content">
        <h3>Confirm Deletion</h3>
        <p>Are you sure you want to delete this product?</p>
        <div class="modal-actions">
            <button class="yes-btn" onclick="proceedDelete()">Yes</button>
            <button class="no-btn" onclick="closeModal()">No</button>
        </div>
    </div>
</div>

<script>
    function previewImageEvent(event) {
        var input = event.target;
        if (input.files && input.files.length > 0) {
            var reader = new FileReader();
            reader.onload = function () {
                var output = document.getElementById('previewImage');
                output.src = reader.result;
            };
            reader.readAsDataURL(input.files[0]);
        }
    }

    let deleteProductId = 0;

    function confirmDelete(productId) {
        deleteProductId = productId;
        document.getElementById('confirmModal').style.display = 'flex';
    }

    function closeModal() {
        document.getElementById('confirmModal').style.display = 'none';
    }

    function proceedDelete() {
        window.location.href = "/product/delete/" + deleteProductId;
    }
</script>
