@model IEnumerable<ProductManagementModule.Domain.Order>

@{
    ViewData["Title"] = "Danh sách đơn hàng";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h2>Danh sách đơn hàng của bạn</h2>

        @if (Model == null || !Model.Any())
        {
            <p class="alert alert-info">Bạn chưa có đơn hàng nào.</p>
        }
        else
        {
            <table class="table table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Mã đơn hàng</th>
                        <th>Địa chỉ giao hàng</th>
                        <th>Số điện thoại</th>
                        <th>Thời gian đặt hàng</th>
                        <th>Trạng thái</th>
                        <th>Tổng giá</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.Id</td>
                            <td>@order.Address</td>
                            <td>@order.Phone</td>
                            <td>@order.OrderTime.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                @switch (order.Status)
                                {
                                    case 0:
                                        <span class="badge badge-warning">Đang xử lý</span>
                                        break;
                                    case 1:
                                        <span class="badge badge-success">Đã giao</span>
                                        break;
                                    case 2:
                                        <span class="badge badge-danger">Đã hủy</span>
                                        break;
                                    default:
                                        <span class="badge badge-secondary">Không xác định</span>
                                        break;
                                }
                            </td>
                            <td>@order.TotalPrice.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</td>
                            <td>
                                <a href="@Url.Action("Details", "Order", new { id = order.Id })" class="btn btn-sm btn-primary">Xem chi tiết</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        <div class="mt-3">
            <a href="/products/view/1" class="btn btn-secondary">Quay lại trang chủ</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>